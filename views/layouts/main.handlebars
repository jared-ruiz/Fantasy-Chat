<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Fantasy Talk</title>
    {{! <link rel="stylesheet" href="/stylesheets/style.css" /> }}
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"
    />
  </head>

  <body class="has-background-warning-dark">
    <header class="navbar is-dark">
      <h1>
        <div class="navbar-brand">Fantasy Talk</div>
      </h1>
      <nav class="navbar-end">
        {{#if loggedIn}}
          <a
            href="/"
            class="button navbar-item has-background-dark"
          >Homepage</a>
          <a
            href="/dashboard"
            class="button navbar-item has-background-dark"
          >dashboard</a>
          <button
            id="logout"
            class="button navbar-item has-background-dark"
          >logout</button>
        {{else}}
          <a href="/">Homepage</a>
          <a href="/login">login</a>
        {{/if}}
      </nav>
    </header>
    <main>
      {{{body}}}
    </main>
    <footer class="footer has-background-dark">
      <div class="content has-text-centered">
        Natural 20 for perception!
      </div>
    </footer>
    {{#if loggedIn}}
      <script src="/javascript/logout.js"></script>
    {{/if}}
  </body>

</html>