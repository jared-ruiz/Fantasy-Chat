<div class="columns">
  <div class="column is-offset-5">
    <form class="login-form">
      <div>
        <label for="email-login" class="label">Email:</label>
        <input type="text" id="email-login" />
      </div>
      <div>
        <label for="password-login" class="label">Password:</label>
        <input type="password" id="password-login" />
      </div>
      <div>
        <button
          type="submit"
          class="button has-background-dark has-text-grey-lighter"
        >Login</button>
      </div>
    </form>

    <form class="signup-form">
      <div>
        <label for="username-signup" class="label">Username:</label>
        <input type="text" id="username-signup" />
      </div>
      <div>
        <label for="email-signup" class="label mb-0">Email:</label>
        <input type="text" id="email-signup" />
      </div>
      <div>
        <label for="password-signup" class="label">Password:</label>
        <input type="password" id="password-signup" />
      </div>
      <div>
        <button
          type="submit"
          class="button has-background-dark has-text-grey-lighter"
        >SignUp</button>
      </div>
    </form>
  </div>
</div>
<script src="/javascript/login.js"></script>